(defun* matrix-rotate-local! ((out-matrix matrix) (matrix matrix) (vec vec)) (:result matrix :abbrev mrotl!)
  (macrolet ((rotate-angle (angle s c &body body)
               `(when (> (abs ,angle) +epsilon+)
                  (let ((,s (sin ,angle))
                        (,c (cos ,angle)))
                    ,@body
                    (matrix*! out-matrix m out-matrix)))))
    (let ((rotation (matrix)))
      (declare (dynamic-extent rotation))
      (with-matrix (m (matrix-identity! rotation))
        (with-vector (v vec)
          (matrix-copy! out-matrix matrix)
          (rotate-angle vz s c
                        (psetf m00 c m01 (- s)
                               m10 s m11 c))
          (rotate-angle vx s c
                        (psetf m00 1.0 m01 0.0 m02 0.0
                               m10 0.0 m11 c m12 (- s)
                               m20 0.0 m21 s m22 c))
          (rotate-angle vy s c
                        (psetf m00 c m01 0.0 m02 s
                               m10 0.0 m11 1.0 m12 0.0
                               m20 (- s) m21 0.0 m22 c))))))
  out-matrix)

(defun* matrix-rotate-local ((matrix matrix) (vec vec)) (:result matrix :abbrev mrotl)
  (matrix-rotate-local! (matrix-identity) matrix vec))

(defun* matrix-rotate! ((out-matrix matrix) (angle float) (axis vec)) (:result matrix :abbrev mrot!)
  (let* ((c (cos (float angle 1.0)))
         (s (sin (float angle 1.0)))
         (1-c (- 1.0 c))
         (normalized-axis (vec)))
    (declare (dynamic-extent normalized-axis))
    (with-matrix (o out-matrix)
      (with-vector (v (vec-normalize! normalized-axis axis))
        (psetf o00 (+ (* vx vx 1-c) c)
               o01 (- (* vx vy 1-c) (* vz s))
               o02 (+ (* vx vz 1-c) (* vy s))
               o10 (+ (* vx vy 1-c) (* vz s))
               o11 (+ (* vy vy 1-c) c)
               o12 (- (* vy vz 1-c) (* vx s))
               o20 (- (* vx vz 1-c) (* vy s))
               o21 (+ (* vy vz 1-c) (* vx s))
               o22 (+ (* vz vz 1-c) c)))))
  out-matrix)

(defun* matrix-rotate ((angle float) (axis vec)) (:result matrix :abbrev mrot)
  (matrix-rotate! (matrix-identity) angle axis))

