  (with-matrix (o out-matrix)
    (rotatef o10 o01)
    (rotatef o20 o02)
    (rotatef o21 o12)
    (psetf o03 (+ (* o00 (- o03)) (* o01 (- o13)) (* o02 (- o23)))
           o13 (+ (* o10 (- o03)) (* o11 (- o13)) (* o12 (- o23)))
           o23 (+ (* o20 (- o03)) (* o21 (- o13)) (* o22 (- o23)))))
  out-matrix)

